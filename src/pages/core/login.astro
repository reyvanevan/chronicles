---
import '../../styles/global.css';

// To keep the CMS and Universe layout separate from the public landing layout
---

<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chronicles - System Access</title>
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,600;0,700;1,600&display=swap" rel="stylesheet">
    
    <!-- Icons & Animations -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script is:inline src="https://unpkg.com/lucide@latest"></script>
    
    <script is:inline>
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</head>
<body class="bg-gradient-to-br from-brand-blue via-slate-50 to-brand-pink dark:from-slate-950 dark:via-slate-900 dark:to-slate-950 min-h-screen text-slate-700 dark:text-slate-300 selection:bg-brand-pink selection:text-brand-accent overflow-hidden flex items-center justify-center p-4">
    

    <!-- Animated Background -->
    <div class="absolute inset-0 overflow-hidden">
        <!-- Grid Pattern -->
        <div class="absolute inset-0 bg-[linear-gradient(rgba(0,0,0,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(0,0,0,0.02)_1px,transparent_1px)] dark:bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:50px_50px]"></div>
        
        <!-- Glowing Orbs -->
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-pink-500/20 rounded-full blur-[100px] animate-pulse-slow"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-blue-500/20 rounded-full blur-[100px] animate-pulse-slow animation-delay-2000"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-purple-500/10 rounded-full blur-[80px] animate-float"></div>
    </div>

    <!-- Login Card -->
    <div id="loginCard" class="relative z-10 w-full max-w-sm md:max-w-md mx-auto">
        
        <!-- Top Badge -->
        <div class="text-center mb-6">
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/50 dark:bg-slate-800/50 backdrop-blur-md rounded-full border border-slate-200 dark:border-slate-700/50 text-slate-600 dark:text-slate-400 text-xs font-medium uppercase tracking-widest shadow-sm">
                <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                System Operational
            </div>
        </div>

        <!-- Main Card -->
        <div class="bg-white/70 dark:bg-slate-900/80 backdrop-blur-xl border border-white/20 dark:border-slate-700/50 rounded-3xl shadow-2xl shadow-slate-200/50 dark:shadow-black/50 p-6 md:p-10 transition-colors duration-300">
            
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="relative inline-block mb-4">
                    <div class="w-16 h-16 md:w-20 md:h-20 rounded-2xl bg-gradient-to-tr from-brand-pink to-brand-accent flex items-center justify-center shadow-lg shadow-pink-500/30 transform rotate-3 hover:rotate-0 transition-transform duration-300">
                        <i data-lucide="feather" class="w-8 h-8 md:w-10 md:h-10 text-white"></i>
                    </div>
                </div>
                <h1 class="font-serif text-2xl md:text-3xl font-bold text-slate-800 dark:text-white mb-2">Chronicles Access</h1>
                <p class="text-slate-500 dark:text-slate-400 text-sm">Masuk untuk mengelola cerita</p>
            </div>

            <!-- Login Form -->
            <form onsubmit="handleLogin(event)" class="space-y-5">
                <!-- Email -->
                <div class="space-y-2">
                    <label class="text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider flex items-center gap-2">
                        <i data-lucide="mail" class="w-3 h-3"></i> Email
                    </label>
                    <div class="relative">
                        <input type="email" id="email"
                            class="w-full px-4 py-3 md:py-4 bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 rounded-xl text-slate-800 dark:text-white placeholder-slate-400 dark:placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-brand-pink/50 focus:border-brand-pink transition-all"
                            placeholder="admin@chronicles.com" required>
                    </div>
                </div>

                <!-- Password -->
                <div class="space-y-2">
                    <label class="text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider flex items-center gap-2">
                        <i data-lucide="key" class="w-3 h-3"></i> Password
                    </label>
                    <div class="relative">
                        <input type="password" id="password"
                            class="w-full px-4 py-3 md:py-4 bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 rounded-xl text-slate-800 dark:text-white placeholder-slate-400 dark:placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-brand-pink/50 focus:border-brand-pink transition-all pr-12"
                            placeholder="••••••••" required>
                        <button type="button" onclick="togglePassword()"
                            class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-400 hover:text-slate-600 dark:hover:text-white transition">
                            <i data-lucide="eye" id="eyeIcon" class="w-5 h-5"></i>
                        </button>
                    </div>
                </div>

                <!-- Error Message -->
                <div id="errorMsg" class="hidden p-3 bg-red-50 dark:bg-red-500/10 border border-red-200 dark:border-red-500/30 rounded-xl text-red-600 dark:text-red-400 text-sm text-center">
                    <i data-lucide="alert-circle" class="w-4 h-4 inline mr-1"></i>
                    <span id="errorText">Kredensial tidak valid</span>
                </div>

                <!-- Submit Button -->
                <button type="submit" id="loginBtn"
                    class="w-full py-3 md:py-4 bg-gradient-to-r from-brand-pink to-brand-accent hover:from-pink-600 hover:to-purple-700 text-white rounded-xl font-bold shadow-lg shadow-pink-500/30 transform transition-all hover:scale-[1.02] active:scale-[0.98] flex items-center justify-center gap-2 mt-6">
                    <span>Masuk Dashboard</span>
                    <i data-lucide="arrow-right" class="w-5 h-5"></i>
                </button>
            </form>

            <!-- Footer -->
            <div class="mt-8 pt-6 border-t border-slate-200 dark:border-slate-700/50">
                <div class="flex items-center justify-between text-xs text-slate-500 dark:text-slate-500">
                    <a href="/" class="flex items-center gap-1 hover:text-brand-pink dark:hover:text-white transition">
                        <i data-lucide="arrow-left" class="w-3 h-3"></i>
                        Kembali ke Utama
                    </a>
                    <span class="flex items-center gap-1">
                        <i data-lucide="shield" class="w-3 h-3"></i>
                        Akses Terproteksi
                    </span>
                </div>
            </div>
        </div>

        <!-- Bottom Text -->
        <p class="text-center text-slate-500 dark:text-slate-600 text-xs mt-6">
            Chronicles © 2026 • Control Center v2.0
        </p>
    </div>

    <script>
        import { auth } from '../../lib/firebase-config.js';
        import { signInWithEmailAndPassword, onAuthStateChanged } from "firebase/auth";

        lucide.createIcons();

        // Check if already logged in
        onAuthStateChanged(auth, (user) => {
            if (user) {
                window.location.href = '/core';
            }
        });

        // Toggle Password Visibility
        window.togglePassword = function() {
            const input = document.getElementById('password');
            const icon = document.getElementById('eyeIcon');
            if (input.type === 'password') {
                input.type = 'text';
                icon.setAttribute('data-lucide', 'eye-off');
            } else {
                input.type = 'password';
                icon.setAttribute('data-lucide', 'eye');
            }
            lucide.createIcons();
        }

        // Handle Login
        window.handleLogin = async function(e) {
            e.preventDefault();
            
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const btn = document.getElementById('loginBtn');
            const errorDiv = document.getElementById('errorMsg');
            const card = document.getElementById('loginCard');
            
            // Hide previous error
            errorDiv.classList.add('hidden');
            
            // Loading state
            btn.disabled = true;
            btn.innerHTML = `<svg class="animate-spin w-5 h-5" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Memverifikasi...`;

            try {
                await signInWithEmailAndPassword(auth, email, password);
                
                // Success!
                btn.classList.remove('from-brand-pink', 'to-brand-accent');
                btn.classList.add('bg-green-500');
                btn.innerHTML = `<i data-lucide="check" class="w-5 h-5"></i> Akses Diterima`;
                lucide.createIcons();

                // Redirect to dashboard
                setTimeout(() => {
                    window.location.href = '/core';
                }, 800);

            } catch (error) {
                console.error('Login error:', error);
                
                // Show error
                let errorMessage = 'Email atau password salah. Silakan coba lagi.';
                if (error.code === 'auth/user-not-found') {
                    errorMessage = 'Akun tidak ditemukan.';
                } else if (error.code === 'auth/wrong-password') {
                    errorMessage = 'Password salah.';
                }
                
                document.getElementById('errorText').textContent = errorMessage;
                errorDiv.classList.remove('hidden');
                
                // Reset button
                btn.disabled = false;
                btn.classList.add('from-brand-pink', 'to-brand-accent');
                btn.classList.remove('bg-green-500');
                btn.innerHTML = `<span>Masuk Dashboard</span><i data-lucide="arrow-right" class="w-5 h-5"></i>`;
                lucide.createIcons();
            }
        }
    </script>
</body>
</html>
