---
import '../../styles/global.css';

// To keep the CMS and Universe layout separate from the public landing layout
---

<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our Universe</title>
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,600;0,700;1,600&display=swap" rel="stylesheet">
    
    <!-- Icons & Animations -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script is:inline src="https://unpkg.com/lucide@latest"></script>
    
    <script is:inline>
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</head>
<body class="bg-gradient-to-br from-brand-blue via-slate-50 to-brand-pink dark:from-slate-950 dark:via-slate-900 dark:to-slate-950 min-h-screen text-slate-700 dark:text-slate-300 selection:bg-brand-pink selection:text-brand-accent ">
    
    
    <!-- Loading Screen -->
    <div id="loading-screen" class="text-center">
        <div class="w-16 h-16 bg-gradient-to-tr from-pink-500 to-purple-500 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg shadow-pink-500/30 animate-pulse">
            <i data-lucide="globe-2" class="w-8 h-8 text-white"></i>
        </div>
        <h1 class="text-white text-2xl font-bold mb-2">Universe</h1>
        <p class="text-white text-lg font-medium">Authenticating...</p>
        <p class="text-slate-400 text-sm mt-2">Please wait</p>
        
        <div class="mt-6 w-48 bg-slate-800 rounded-full h-1.5 mx-auto overflow-hidden">
            <div class="bg-gradient-to-r from-pink-500 to-purple-500 h-full rounded-full animate-pulse"></div>
        </div>
    </div>

    <!-- Auth Check Script -->
    <script>
        import { auth } from '../../lib/firebase-config.js';
        import { onAuthStateChanged } from "firebase/auth";

        // Initialize icons
        lucide.createIcons();

        onAuthStateChanged(auth, async (user) => {
            if (!user) {
                // No session, redirect to login
                window.location.href = '/universe/login';
            } else {
                // User authenticated, redirect to home
                window.location.href = '/universe/home';
            }
        });
    </script>

    
    <script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script is:inline>
        AOS.init({ once: true, offset: 50, duration: 800 });
        if(window.lucide) { lucide.createIcons(); }
        
        function toggleTheme() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
            } else {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
            }
        }
    </script>
</body>
</html>
