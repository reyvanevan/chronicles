---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import LoveProgress from '../components/LoveProgress.astro';
import AboutSection from '../components/AboutSection.astro';
import GallerySection from '../components/GallerySection.astro';
import MemoriesSection from '../components/MemoriesSection.astro';
import ForeverSection from '../components/ForeverSection.astro';
import MusicPlayer from '../components/MusicPlayer.astro';
import SecretLoginModal from '../components/SecretLoginModal.astro';
---

<Layout title="Home">
    <!-- SCROLL PROGRESS BAR -->
    <div id="scroll-progress-bar"
        class="fixed top-0 left-0 h-1 bg-gradient-to-r from-pink-500 via-purple-500 to-blue-500 z-[60] transition-all duration-100 ease-out shadow-[0_0_10px_rgba(236,72,153,0.5)]"
        style="width: 0%"></div>

    <!-- LIVING BACKGROUND (Fixed across all sections) -->
    <div class="fixed inset-0 z-[-1] overflow-hidden pointer-events-none">
        <div class="absolute top-[-10%] left-[-10%] w-[500px] h-[500px] bg-pink-400/20 dark:bg-pink-900/20 rounded-full blur-[120px] mix-blend-multiply dark:mix-blend-screen animate-blob"></div>
        <div class="absolute top-[20%] right-[-10%] w-[400px] h-[400px] bg-purple-400/20 dark:bg-purple-900/20 rounded-full blur-[120px] mix-blend-multiply dark:mix-blend-screen animate-blob animation-delay-2000"></div>
        <div class="absolute bottom-[-10%] left-[20%] w-[600px] h-[600px] bg-blue-400/20 dark:bg-blue-900/20 rounded-full blur-[120px] mix-blend-multiply dark:mix-blend-screen animate-blob animation-delay-4000"></div>
    </div>

    <main class="pt-16 relative">
        <HeroSection />
        <LoveProgress />
        <AboutSection />
        <GallerySection />
        <MemoriesSection />
        <ForeverSection />
    </main>

    <MusicPlayer />
    <SecretLoginModal />

    <!-- Firestore Logic -->
    <script>
        
        import { db } from '../lib/firebase-config.js';
        import { doc, getDoc, updateDoc, setDoc, increment } from "firebase/firestore";
        import { getLoveProgress, getMilestoneMessage, formatRelativeTime } from '../lib/firestore-service.js';

        // Track visit (session-based to avoid duplicate counting on refresh)
        async function trackVisit() {
            if (sessionStorage.getItem('visit_counted')) return;
            try {
                const statsRef = doc(db, "landing", "stats");
                await updateDoc(statsRef, { 
                    totalVisits: increment(1) 
                });
                sessionStorage.setItem('visit_counted', 'true');
                console.log('‚úÖ Visit tracked');
            } catch (error) {
                // If document doesn't exist, create it
                if (error.code === 'not-found') {
                    await setDoc(statsRef, { 
                        totalVisits: 1,
                        memoriesCount: 0,
                        startDate: new Date()
                    });
                    sessionStorage.setItem('visit_counted', 'true');
                    console.log('‚úÖ Visit tracked (new document created)');
                } else {
                    console.log('Visit tracking skipped:', error.message);
                }
            }
        }

        // Default fallback data (used when Firestore unavailable)
        const FALLBACK_DATA = {
            profile: {
                photo: 'https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80'
            },
            gallery: [
                { url: 'https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80', caption: 'The Smile' },
                { url: 'https://images.unsplash.com/photo-1516975080664-ed2fc6a32937?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80', caption: 'Our Favorite Place' },
                { url: 'https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80', caption: 'The Day We Laughed' },
                { url: 'https://images.unsplash.com/photo-1534528741775-53994a69daeb?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80', caption: 'Cantik Banget' }
            ],
            memories: [
                { image: 'https://images.unsplash.com/photo-1516975080664-ed2fc6a32937?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80' },
                { image: 'https://images.unsplash.com/photo-1534528741775-53994a69daeb?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80' }
            ]
        };

        // Load fallback images to prevent skeleton stuck
        function loadFallbackImages() {
            // Profile
            const profileImg = document.getElementById('profile-img');
            if (profileImg) profileImg.src = FALLBACK_DATA.profile.photo;

            // Gallery
            FALLBACK_DATA.gallery.forEach((item, i) => {
                const img = document.getElementById(`gallery-img-${i + 1}`);
                if (img) img.src = item.url;
            });

            // Memories
            FALLBACK_DATA.memories.forEach((item, i) => {
                const img = document.getElementById(`memory-img-${i + 1}`);
                if (img) img.src = item.image;
            });
        }

        async function loadLandingData() {
            try {
                // Load Profile
                const profileDoc = await getDoc(doc(db, "landing", "profile"));
                if (profileDoc.exists()) {
                    const p = profileDoc.data();
                    // Hero section
                    const heroName = document.getElementById('hero-name');
                    if (heroName && p.name) heroName.innerHTML = p.name.split(' ')[0] + ' <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-blue-400 dark:from-pink-300 dark:to-blue-300">' + (p.name.split(' ').slice(1).join(' ') || '') + '</span>';

                    // About section
                    const profileImg = document.getElementById('profile-img');
                    const profileBio = document.getElementById('profile-bio');
                    const profileTags = document.getElementById('profile-tags');

                    if (profileImg && p.photo) profileImg.src = p.photo;
                    if (profileBio && p.bio) profileBio.innerHTML = p.bio;
                    if (profileTags && p.tags) {
                        const colors = ['blue', 'pink', 'purple'];
                        profileTags.innerHTML = p.tags.map((tag, i) =>
                            `<span class="px-3 py-1 bg-${colors[i]}-50 dark:bg-${colors[i]}-900/30 text-${colors[i]}-500 dark:text-${colors[i]}-300 rounded-full text-xs font-semibold tracking-wider border border-${colors[i]}-100 dark:border-${colors[i]}-800">#${tag}</span>`
                        ).join('');
                    }
                } else {
                    console.log('‚ÑπÔ∏è Profile document not found, using defaults');
                }

                // Load Gallery
                const galleryDoc = await getDoc(doc(db, "landing", "gallery"));
                if (galleryDoc.exists()) {
                    const g = galleryDoc.data();
                    g.items?.forEach((item, i) => {
                        const img = document.getElementById(`gallery-img-${i + 1}`);
                        const caption = document.getElementById(`gallery-caption-${i + 1}`);
                        if (img && item.url) img.src = item.url;
                        if (caption && item.caption) caption.textContent = item.caption;
                    });
                }

                // Load Memories
                const memoriesDoc = await getDoc(doc(db, "landing", "memories"));
                if (memoriesDoc.exists()) {
                    const m = memoriesDoc.data();
                    m.items?.forEach((item, i) => {
                        const img = document.getElementById(`memory-img-${i + 1}`);
                        const placeholder = document.getElementById(`memory-placeholder-${i + 1}`);
                        const title = document.getElementById(`memory-title-${i + 1}`);
                        const desc = document.getElementById(`memory-desc-${i + 1}`);

                        if (title && item.title) title.textContent = item.title;
                        if (desc && item.description) desc.textContent = item.description;

                        // Handle image and placeholder
                        if (item.image && item.image !== '' && item.image !== null) {
                            // Has valid image - show image, hide placeholder
                            if (img) {
                                img.src = item.image;
                                img.classList.remove('hidden');
                            }
                            if (placeholder) placeholder.classList.add('hidden');
                        } else {
                            // No image - hide image, show placeholder
                            if (img) img.classList.add('hidden');
                            if (placeholder) placeholder.classList.remove('hidden');
                        }
                    });
                }

                // Load Letter
                const letterDoc = await getDoc(doc(db, "landing", "letter"));
                if (letterDoc.exists()) {
                    const letter = letterDoc.data();
                    const letterTitle = document.getElementById('letter-title-display');
                    const letterContent = document.getElementById('letter-content-display');
                    const letterQuote = document.getElementById('letter-quote-display');

                    if (letterTitle && letter.title) letterTitle.textContent = letter.title;
                    if (letterContent && letter.content) letterContent.innerHTML = letter.content.split('\n').map(p => `<p>${p}</p>`).join('');
                    if (letterQuote && letter.quote) letterQuote.textContent = '"' + letter.quote + '"';
                }

                console.log('‚úÖ Landing data loaded from Firestore');
            } catch (error) {
                console.log('Data loading skipped (skeleton remains):', error.message);
            }
        }

        // Load Love Progress for landing page
        async function loadLoveProgress() {
            try {
                const progress = await getLoveProgress();
                const container = document.getElementById('love-progress-section');
                
                if (progress.isVisible === false) {
                    if (container) container.classList.add('hidden');
                    return;
                } else {
                    if (container) container.classList.remove('hidden');
                }

                const currentValue = progress.currentProgress || 0;
                const milestone = getMilestoneMessage(currentValue);

                const progressBar = document.getElementById('landing-progress-bar');
                const progressIndicator = document.getElementById('landing-progress-indicator');
                const progressValue = document.getElementById('landing-progress-value');
                const progressDisplay = document.getElementById('progress-display');
                const milestoneEmoji = document.getElementById('landing-milestone-emoji');
                const milestoneText = document.getElementById('landing-milestone-text');
                const lastUpdateEl = document.getElementById('landing-last-update');
                const visitorCountEl = document.getElementById('visitor-count');

                if (progressBar) {
                    progressBar.style.width = `${currentValue}%`;
                }
                if (progressIndicator) {
                    progressIndicator.style.left = `${currentValue}%`;
                }
                if (progressValue) {
                    progressValue.textContent = currentValue;
                }
                if (progressDisplay) {
                    progressDisplay.textContent = `${currentValue}%`;
                }
                if (milestoneEmoji) {
                    milestoneEmoji.textContent = milestone.emoji;
                }
                if (milestoneText) {
                    milestoneText.textContent = `"${milestone.message}"`;
                }
                if (lastUpdateEl && progress.lastUpdate) {
                    lastUpdateEl.textContent = progress.lastUpdate.toLocaleDateString('id-ID', {
                        day: 'numeric',
                        month: 'long',
                        year: 'numeric'
                    });
                }

                // Load Sasuke's image for 0% marker
                const sasukeDoc = await getDoc(doc(db, "landing", "sasukeImage"));
                if (sasukeDoc.exists() && sasukeDoc.data().url) {
                    const sasukeImg = document.querySelector('#love-progress-section img[alt="Sasuke"]');
                    if (sasukeImg) {
                        sasukeImg.src = sasukeDoc.data().url;
                    }
                }

                // Load Rey's profile photo for the 100% side
                const profileDoc = await getDoc(doc(db, "landing", "profileRey"));
                if (profileDoc.exists()) {
                    const reyPhoto = document.getElementById('landing-rey-photo');
                    if (reyPhoto && profileDoc.data().photo) {
                        reyPhoto.src = profileDoc.data().photo;
                    }
                }

                // Display visitor count from stats
                const statsDoc = await getDoc(doc(db, "landing", "stats"));
                if (statsDoc.exists() && visitorCountEl) {
                    visitorCountEl.textContent = statsDoc.data().totalVisits?.toLocaleString() || '0';
                }

                // Show confetti if 100%!
                if (progress.currentProgress === 100) {
                    celebrateReunion();
                }

                console.log('‚úÖ Love progress loaded');
            } catch (error) {
                console.error('Love progress loading error:', error);
            }
        }

        // Confetti celebration for 100%
        function celebrateReunion() {
            const container = document.getElementById('love-progress-section');
            if (!container) return;

            for (let i = 0; i < 50; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.innerHTML = ['‚ù§Ô∏è', 'üíñ', 'üíï', '‚ú®', 'üéâ'][Math.floor(Math.random() * 5)];
                    confetti.className = 'fixed pointer-events-none text-2xl z-50';
                    confetti.style.left = `${Math.random() * 100}vw`;
                    confetti.style.top = '-20px';
                    confetti.style.animation = `confetti-fall ${2 + Math.random() * 2}s ease-out forwards`;
                    document.body.appendChild(confetti);

                    setTimeout(() => confetti.remove(), 4000);
                }, i * 50);
            }
        }

        // Share love progress
        window.shareLoveProgress = async function () {
            const progress = await getLoveProgress();
            const text = `Perjalanan pulang kami: ${progress.currentProgress || 0}%\n\n‚ù§Ô∏è Doakan kami ya...\n\n`;
            const url = window.location.origin;

            if (navigator.share) {
                try {
                    await navigator.share({ title: 'Perjalanan Pulang', text, url });
                } catch (e) {
                    console.log('Share cancelled');
                }
            } else {
                const fullText = text + url;
                await navigator.clipboard.writeText(fullText);
                alert('Link berhasil disalin! üìã');
            }
        };

        // Toggle history timeline
        let historyLoaded = false;
        window.toggleHistory = async function() {
            const timeline = document.getElementById('historyTimeline');
            const chevron = document.getElementById('historyChevron');
            const isHidden = timeline.classList.contains('hidden');

            if (isHidden) {
                timeline.classList.remove('hidden');
                chevron.style.transform = 'rotate(180deg)';
                
                if (!historyLoaded) {
                    await loadHistoryTimeline();
                    historyLoaded = true;
                }
            } else {
                timeline.classList.add('hidden');
                chevron.style.transform = 'rotate(0deg)';
            }
        };

        // Load and render history timeline
        async function loadHistoryTimeline() {
            try {
                const progress = await getLoveProgress();
                const history = progress.history || [];
                const historyList = document.getElementById('historyList');

                if (history.length === 0) {
                    historyList.innerHTML = `
                        <div class="text-center py-8 text-slate-400 dark:text-slate-500">
                            <i data-lucide="inbox" class="w-8 h-8 mx-auto mb-2"></i>
                            <p class="text-sm">No history yet</p>
                        </div>
                    `;
                    lucide.createIcons();
                    return;
                }

                // Sort by date descending (newest first)
                const sortedHistory = [...history].sort((a, b) => {
                    const dateA = a.date?.toDate ? a.date.toDate() : new Date(a.date);
                    const dateB = b.date?.toDate ? b.date.toDate() : new Date(b.date);
                    return dateB - dateA;
                });

                // Render timeline items
                historyList.innerHTML = sortedHistory.map((item, index) => {
                    const date = item.date?.toDate ? item.date.toDate() : new Date(item.date);
                    const value = item.value || 0;
                    const note = item.note || '';
                    const isLast = index === sortedHistory.length - 1;

                    return `
                        <div class="flex gap-4 relative">
                            ${!isLast ? '<div class="absolute left-5 top-12 w-0.5 h-full bg-gradient-to-b from-pink-300 to-transparent dark:from-pink-700"></div>' : ''}
                            
                            <div class="relative flex-shrink-0">
                                <div class="w-10 h-10 rounded-full bg-gradient-to-tr from-pink-500 to-purple-500 flex items-center justify-center text-white font-bold text-sm shadow-lg shadow-pink-500/30 ring-4 ring-pink-100 dark:ring-pink-900/30">
                                    ${value}%
                                </div>
                            </div>
                            
                            <div class="flex-1 pb-6">
                                <div class="glass-card rounded-xl p-4 hover:shadow-lg transition-shadow">
                                    <div class="flex items-start justify-between gap-4 mb-2">
                                        <div>
                                            <h4 class="font-semibold text-slate-800 dark:text-white">
                                                Update to ${value}%
                                            </h4>
                                            <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">
                                                ${formatRelativeTime(date)}
                                            </p>
                                        </div>
                                        ${value === 100 ? '<span class="text-2xl">üéâ</span>' : value >= 75 ? '<span class="text-xl">üíï</span>' : value >= 50 ? '<span class="text-xl">üíó</span>' : value >= 25 ? '<span class="text-xl">üíô</span>' : '<span class="text-xl">ü§ç</span>'}
                                    </div>
                                    ${note ? `<p class="text-sm text-slate-600 dark:text-slate-300 italic">"${note}"</p>` : ''}
                                </div>
                            </div>
                        </div>
                    `;
                }).join('');

                lucide.createIcons();
            } catch (error) {
                console.error('Failed to load history:', error);
                const historyList = document.getElementById('historyList');
                historyList.innerHTML = `
                    <div class="text-center py-8 text-red-400">
                        <i data-lucide="alert-circle" class="w-8 h-8 mx-auto mb-2"></i>
                        <p class="text-sm">Failed to load history</p>
                    </div>
                `;
                lucide.createIcons();
            }
        }

        // Run on page load
        trackVisit();
        loadLandingData();
        loadLoveProgress();
        
        // Music control
        const bgMusic = document.getElementById('bgMusic');
        const musicBtn = document.getElementById('musicBtn');
        const musicIcon = document.getElementById('musicIcon');
        let isPlaying = false;
        
        window.toggleMusic = function() {
            if (isPlaying) {
                bgMusic.pause();
                isPlaying = false;
                musicIcon.classList.remove('animate-spin');
                musicBtn.classList.remove('ring-2', 'ring-pink-500/50');
            } else {
                bgMusic.play().catch(e => console.log('Play error:', e));
                isPlaying = true;
                musicIcon.classList.add('animate-spin');
                musicBtn.classList.add('ring-2', 'ring-pink-500/50');
            }
        };
    
    </script>
    <script>
        
        import { auth } from '../lib/firebase-config.js';
        import { signInWithEmailAndPassword } from "firebase/auth";

        // Secret Login Logic
        let logoClicks = 0;
        let clickTimer;
        const logoTrigger = document.getElementById('secret-login-trigger');
        const secretModal = document.getElementById('secret-login-modal');
        const loginCard = document.getElementById('login-card');
        const emailInput = document.getElementById('email-input');
        const passwordInput = document.getElementById('password-input');
        const loginBtn = document.getElementById('login-btn');
        const loginError = document.getElementById('login-error');

        // Make functions globally available for onclick
        window.closeSecretLogin = closeSecretLogin;

        logoTrigger.addEventListener('click', (e) => {
            e.preventDefault();
            logoClicks++;
            console.log('Logo clicked:', logoClicks);

            clearTimeout(clickTimer);
            clickTimer = setTimeout(() => {
                logoClicks = 0;
                console.log('Click timer reset');
            }, 2000);

            if (logoClicks === 5) {
                console.log('Triggering redirect...');
                
                const referrer = document.referrer;
                if (referrer && referrer.includes('/universe/')) {
                    window.location.href = '/universe/login';
                } else {
                    window.location.href = 'universe/';
                }
                logoClicks = 0;
            }
        });

        function openSecretLogin() {
            secretModal.classList.remove('hidden');
            setTimeout(() => {
                secretModal.classList.remove('opacity-0');
                loginCard.classList.remove('scale-95');
                loginCard.classList.add('scale-100');
                emailInput.focus();
            }, 10);
        }

        function closeSecretLogin() {
            secretModal.classList.add('opacity-0');
            loginCard.classList.remove('scale-100');
            loginCard.classList.add('scale-95');

            setTimeout(() => {
                secretModal.classList.add('hidden');
                emailInput.value = '';
                passwordInput.value = '';
                loginError.classList.add('hidden');
            }, 300);
        }

        async function handleLogin() {
            const email = emailInput.value;
            const password = passwordInput.value;

            if (!email || !password) return;

            loginBtn.innerHTML = '<i data-lucide="loader-2" class="w-4 h-4 animate-spin"></i>';
            loginBtn.disabled = true;
            loginError.classList.add('hidden');

            try {
                await signInWithEmailAndPassword(auth, email, password);
                loginCard.innerHTML = `
                    <div class="py-8">
                        <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center mx-auto mb-4 text-green-500">
                            <i data-lucide="check" class="w-8 h-8"></i>
                        </div>
                        <h3 class="font-serif text-xl font-bold text-slate-800 dark:text-white">Welcome Home</h3>
                    </div>
                `;
                lucide.createIcons();

                setTimeout(() => {
                    window.location.href = '/universe/home';
                }, 1000);

            } catch (error) {
                console.error(error);
                loginError.textContent = "Invalid email or password.";
                loginError.classList.remove('hidden');
                loginCard.classList.add('animate-shake');
                setTimeout(() => loginCard.classList.remove('animate-shake'), 500);

                loginBtn.innerHTML = '<span>Enter</span><i data-lucide="arrow-right" class="w-4 h-4"></i>';
                loginBtn.disabled = false;
                lucide.createIcons();
            }
        }

        loginBtn.addEventListener('click', handleLogin);

        passwordInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') handleLogin();
        });

        // Close on backdrop click
        secretModal.addEventListener('click', (e) => {
            if (e.target === secretModal) {
                closeSecretLogin();
            }
        });

        // Scroll Progress Bar
        window.addEventListener('scroll', () => {
            const totalScroll = document.documentElement.scrollTop;
            const windowHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            const scroll = totalScroll / windowHeight;
            const progressBar = document.getElementById('scroll-progress-bar');
            if (progressBar) {
                progressBar.style.width = `${scroll * 100}%`;
            }
        });
    
    </script>
</Layout>
