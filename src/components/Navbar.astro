---
const pathname = Astro.url.pathname;

const navLinks = [
    { label: 'Home', href: '/' },
    { label: 'Her', href: '/her' },
    { label: 'Him', href: '/him' },
    { label: 'Us', href: '/us' }
];

const getMobileLabel = (label: string) => {
    switch (label) {
        case 'Her': return 'Her Moments';
        case 'Him': return 'Him Moments';
        case 'Us': return 'Just Us';
        default: return label;
    }
}
---

<header class="fixed top-0 left-0 w-full z-50 nav-glass transition-all duration-300" id="main-header">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16 md:h-20">

            <!-- Logo / Brand -->
            <a href="/" class="flex-shrink-0 flex items-center gap-2 cursor-pointer" id="secret-login-trigger">
                <i data-lucide="globe-2" class="w-6 h-6 text-brand-accent dark:text-brand-accentLight animate-spin-slow"></i>
                <span class="font-serif text-xl md:text-2xl font-bold text-slate-800 dark:text-white tracking-tight">
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-purple-500">Chronicles</span>
                </span>
            </a>

            <!-- Desktop Menu -->
            <nav class="hidden md:flex space-x-8 items-center">
                {navLinks.map(link => {
                    const isActive = pathname === link.href || pathname === link.href + '/';
                    return (
                        <a href={link.href} class={`font-medium transition-colors text-sm uppercase tracking-wider ${isActive ? 'text-brand-accent dark:text-brand-accentLight font-bold' : 'text-slate-600 dark:text-slate-300 hover:text-brand-accent dark:hover:text-brand-accentLight'}`}>
                            {link.label}
                        </a>
                    );
                })}

                <!-- Divider -->
                <div class="h-5 w-px bg-slate-300 dark:bg-slate-700 mx-2"></div>

                <!-- Theme Toggle -->
                <button onclick="toggleTheme()" class="p-2 rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors" aria-label="Toggle theme">
                    <i data-lucide="sun" class="w-5 h-5 text-yellow-400 hidden dark:block"></i>
                    <i data-lucide="moon" class="w-5 h-5 text-slate-600 block dark:hidden"></i>
                </button>
            </nav>

            <!-- Mobile Menu Button -->
            <div class="md:hidden flex items-center gap-4">
                <button onclick="toggleTheme()" class="p-2 rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors" aria-label="Toggle theme mobile">
                    <i data-lucide="sun" class="w-5 h-5 text-yellow-400 hidden dark:block"></i>
                    <i data-lucide="moon" class="w-5 h-5 text-slate-600 block dark:hidden"></i>
                </button>
                <button onclick="toggleMobileMenu()" class="text-slate-600 dark:text-slate-300 hover:text-brand-accent focus:outline-none" aria-label="Open menu">
                    <i data-lucide="menu" class="w-6 h-6"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu Dropdown -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-slate-200 dark:border-slate-800 bg-white/95 dark:bg-slate-900/95 backdrop-blur-lg">
        <div class="px-4 pt-2 pb-6 space-y-2">
            {navLinks.map(link => {
                const isActive = pathname === link.href || pathname === link.href + '/';
                return (
                    <a href={link.href} class={`block px-3 py-3 rounded-md text-base ${isActive ? 'font-bold text-brand-accent bg-pink-50 dark:bg-slate-800/50' : 'font-medium text-slate-700 dark:text-slate-200 hover:text-brand-accent hover:bg-pink-50 dark:hover:bg-slate-800'}`}>
                        {getMobileLabel(link.label)}
                    </a>
                );
            })}
        </div>
    </div>
</header>
