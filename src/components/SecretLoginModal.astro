<!-- Secret Login Modal -->
<div id="secret-login-modal"
    class="hidden fixed inset-0 z-[100] flex items-center justify-center bg-slate-900/80 backdrop-blur-sm p-4 opacity-0 transition-opacity duration-300">
    <div class="glass-card p-8 rounded-3xl w-full max-w-sm text-center transform scale-95 transition-transform duration-300"
        id="login-card">
        <div
            class="w-16 h-16 bg-brand-pink/20 dark:bg-brand-pink/10 rounded-full flex items-center justify-center mx-auto mb-6 text-brand-accent dark:text-brand-accentLight">
            <i data-lucide="lock" class="w-8 h-8"></i>
        </div>

        <h3 class="font-serif text-2xl font-bold text-slate-800 dark:text-white mb-2">Universe Access</h3>
        <p class="text-slate-500 dark:text-slate-400 text-sm mb-6">Login to enter our world.</p>

        <div class="space-y-4">
            <input type="email" id="email-input" placeholder="Email"
                class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-xl focus:outline-none focus:ring-2 focus:ring-brand-accent/50 text-slate-800 dark:text-white placeholder:text-slate-400 transition-all">

            <input type="password" id="password-input" placeholder="Password"
                class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-xl focus:outline-none focus:ring-2 focus:ring-brand-accent/50 text-slate-800 dark:text-white placeholder:text-slate-400 transition-all">

            <div class="flex gap-3 mt-2">
                <button onclick="closeSecretLogin()"
                    class="flex-1 py-3 px-4 rounded-xl text-sm font-medium text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
                    Cancel
                </button>
                <button id="login-btn"
                    class="flex-1 py-3 px-4 rounded-xl text-sm font-medium bg-brand-accent hover:bg-brand-accent/90 text-white shadow-lg shadow-brand-accent/20 transition-all flex justify-center items-center gap-2">
                    <span>Enter</span>
                    <i data-lucide="arrow-right" class="w-4 h-4"></i>
                </button>
            </div>
            <p id="login-error" class="text-red-500 text-xs hidden"></p>
        </div>
    </div>
</div>
